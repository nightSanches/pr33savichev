        </Image>
        <Label x:Name="FIO" Content="gsgsdfghdfbh" Margin="45,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="10"/>
        <TextBlock x:Name="tbMessage" Margin="50,26,0,10" TextWrapping="Wrap"/>
