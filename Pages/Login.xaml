<Page x:Class="pr33savichev.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr33savichev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="#FF0071FF">
        <Grid HorizontalAlignment="Right" Width="200" Background="#B2FFFFFF">
            <Image x:Name="imgUser" Source="/Images/logo.png" Width="100" Height="100" VerticalAlignment="Top" Margin="0,50,0,0" StretchDirection="Both" Stretch="UniformToFill">
                <Image.Clip>
                    <RectangleGeometry RadiusX="50" RadiusY="50" Rect="0,0,100,100"/>
                </Image.Clip>
            </Image>
            <Label Content="Фамилия: " VerticalAlignment="Top" Margin="10,160,10,0"/>
            <TextBox x:Name="Lastname" Height="25" Margin="10,185,10,0" VerticalAlignment="Top" BorderBrush="Black"/>
            <Label Content="Имя: " VerticalAlignment="Top" Margin="10,215,10,0"/>
            <TextBox x:Name="Firstname" Height="25" Margin="10,240,10,0" VerticalAlignment="Top" BorderBrush="Black"/>
            <Label Content="Отчество: " VerticalAlignment="Top" Margin="10,270,10,0"/>
            <TextBox x:Name="Surname" Height="25" Margin="10,295,10,0" VerticalAlignment="Top" BorderBrush="Black"/>
            <Label Content="Фотография: " VerticalAlignment="Top" Margin="10,325,10,0"/>
            <Button Click="SelectPhoto" Content="Выбрать фото" Height="25" Margin="10,350,10,0" VerticalAlignment="Top" Background="White" BorderBrush="Black"/>
            <Button Click="Continue" Content="Продолжить" Height="25" Margin="10,380,10,0" VerticalAlignment="Top" Background="White" BorderBrush="Black"/>
        </Grid>
    </Grid>
</Page>
